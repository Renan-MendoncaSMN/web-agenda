<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         id="WebApp_ID" version="4.0">
    <display-name>Agenda</display-name>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>agendamentoForm</servlet-name>
        <servlet-class>controle.FormularioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>agendamentoForm</servlet-name>
        <url-pattern>/agendamentoForm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>agendamentoIcon</servlet-name>
        <servlet-class>controle.IconServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>agendamentoIcon</servlet-name>
        <url-pattern>/agendamentoIcon</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>agendamentoListAll</servlet-name>
        <servlet-class>controle.ListaTodosServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>agendamentoListAll</servlet-name>
        <url-pattern>/agendamentoListAll</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>agendamentoList</servlet-name>
        <servlet-class>controle.ListaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>agendamentoList</servlet-name>
        <url-pattern>/agendamentoList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>agendamentoStatus</servlet-name>
        <servlet-class>controle.StatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>agendamentoStatus</servlet-name>
        <url-pattern>/agendamentoStatus</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controle.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


</web-app>